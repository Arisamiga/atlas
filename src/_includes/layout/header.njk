<header class="sticky top-0 z-30 h-16 w-full bg-base-100 bg-opacity-80 backdrop-blur border-b border-white/5 shadow">
  <div class="navbar md:px-10">
    <div class="navbar-start">
      {# Burger menu #}
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /></svg>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          {% for page in navbar %}
          <li><a href="{{ page.link }}">{{ page.name }}</a></li>
          {% endfor %}
        </ul>
      </div>
      {# Logo #}
      <a class="btn btn-ghost rounded-full px-1" href="/">
        <span class="sr-only">Home</span>
        <img
          class="w-10"
          src="https://raw.githubusercontent.com/redbrick/design-system/main/assets/logos/redbrick.svg"
        />
      </a>
      {# Navigation #}
      <nav class="hidden lg:flex" aria-label="Global">
        <ul class="menu menu-horizontal px-1">
          {% for page in navbar %}
          <li><a href="{{ page.link }}">{{ page.name }}</a></li>
          {% endfor %}
        </ul>
      </nav>
    </div>
    <div class="navbar-end gap-2">
      <is-land>
        <template data-island="replace">
          {% include "partials/theme-picker.njk" %}
        </template>
      </is-land>
      <a class="btn btn-primary" href="https://dcuclubsandsocs.ie/society/redbrick" rel="noreferrer" target="_blank">
        Signup
      </a>
      <a class="btn btn-neutral" href="https://discord.redbrick.dcu.ie" rel="noreferrer" target="_blank">
        Discord
      </a>
    </div>
  </div>
</header>
